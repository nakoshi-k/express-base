<div class="remodal" data-remodal-id="del-modal-<%= id %>">
    <button data-remodal-action="close" class="remodal-close"></button>
    <p>Would you like to delete #<%= id %>?</p>
    <button data-remodal-action="cancel" class="button warning">Cancel</button>
    <button data-remodal-action="confirm" class="button info" onclick="<%= delFunc %>">OK</button>
</div>

<button data-remodal-target="del-modal-<%= id %>" class="button small" >delete</button>

<script>
    function <%= delFunc %>{
        fetch( '<%= endPoint %>' , {
            credentials: 'same-origin' ,
            method: 'DELETE',
            headers: {
            'X-Requested-With': 'XMLHttpRequest' ,
            'X-XSRF-Token': '<%= token %>'
            }
        })
        .then((response) => {
            if(response.status === 200){ location.href = '<%= redirect %>'; return true; };
            alert('failed delete #<%= id %> !');
        });
        return false;
    }
</script>
