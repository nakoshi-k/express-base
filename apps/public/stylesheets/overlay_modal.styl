
.over-lay,
.modal-container
    position fixed 
    width 100%
    height 100%
    top 0
    left 0
    z-index 2
    background-color: rgba(255,255,255,0.4);
    display flex;          
    justify-content center
    align-items center

.modal-container
    align-items flex-start  

.over-lay .loading
    display flex;          
    justify-content center
    align-items center

    .block
        transition 0.6s all ease
        background-color color-quaternary
        height 1.4rem
        width 1.2rem
        margin 0.6rem
        border-radius 0.4rem
        &.pop
            transition 0.3s all ease-in-out
            background-color transparent 
            margin-bottom -1.6rem;


.modal
    margin-top 8rem
    min-width 40rem
    min-height 6rem
    padding 2rem
    background-color color-initial
    border 1px solid color-secondary
    border-radius 0.6rem
    box-shadow:3px 6px 10px -3px color-quaternary;
    -moz-box-shadow:3px 6px 10px -3px color-quaternary;
    -webkit-box-shadow:3px 6px 10px -3px color-quaternary;
    position relative
    h3
        border-bottom 1px solid color-secondary
        padding-bottom .9rem

    .close
        transition 0.3s color ease
        position absolute
        top -2.0rem
        right 0.6rem

        &.disabled
            color color-tertiary

    .close:hover
        color color-tertiary