#over-lay,
#modal-container{
    position fixed 
    width 100%
    height 100%
    top 0
    left 0
    z-index 2
    background-color: rgba(255,255,255,0.4);
    display flex;          
    justify-content center
    align-items center
}
#modal-container{
    align-items flex-start  
}

.wrap
     padding-top 7.5rem

.text-right 
    text-align right

.text-left 
    text-align left

.text-center
    text-align center

.text-medium
    font-size 1.4rem

.text-small
    font-size 1.0rem

.over-lay .loading
    display flex;          
    justify-content center
    align-items center

.over-lay .loading .block
    transition 0.6s all ease
    background-color color-quaternary
    height 1.4rem
    width 1.2rem
    margin 0.6rem
    border-radius 0.4rem

.over-lay .loading .block.pop
    transition 0.3s all ease-in-out
    background-color transparent 
    margin-bottom -1.6rem;

.margin
    margin :1rem

.modal
    margin-top 8rem
    min-width 40rem
    min-height 6rem
    padding 2rem
    background-color color-initial
    border 1px solid color-quaternary
    border-radius 0.6rem
    box-shadow:3px 6px 10px -3px color-quaternary;
    -moz-box-shadow:3px 6px 10px -3px color-quaternary;
    -webkit-box-shadow:3px 6px 10px -3px color-quaternary;
    position relative
.modal h3{
    border-bottom 1px solid color-secondary
    padding-bottom .9rem
}
.modal .close
    transition 0.3s color ease
    position absolute
    top -2rem
    right -2rem

.modal .close:hover
    color color-tertiary
    
.typcn
    line-height 1

.typcn.large:before
    font-size 4.8rem

.indicator 
    transition 0.6s background ease-in-out , 0.6s width ease-in-out , 0.6s  border-top ease-in-out
    position absolute
    bottom -3px
    background color-quaternary
    height 3px
    width 0
    z-index 100


.indicator.light
    background color-quinary
    border-top 1px solid color-quaternary

.indicator.primary
    background color-secondary
    border-top 1px solid color-primary

.indicator.warning
    background color-warning-light
    border-top 1px solid color-warning


.indicator.success
    background color-success-light
    border-top 1px solid color-success


.indicator.info
    background color-info-light
    border-top 1px solid color-info

.indicator.special
    background color-special-light
    border-top 1px solid color-special
