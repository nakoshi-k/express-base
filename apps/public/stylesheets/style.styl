#over-lay,
#modal-container{
    position fixed 
    width 100%
    height 100%
    top 0
    left 0
    z-index 2
    background-color: rgba(255,255,255,0.4);
    display flex;          
    justify-content center
    align-items center
}
#modal-container{
    align-items flex-start  
}

.wrap
     padding-top 7.5rem

.text-right 
    text-align right

.text-left 
    text-align left

.text-center
    text-align center

.text-medium
    font-size 1.4rem

.text-small
    font-size 1.0rem

#over-lay .loading
    display flex;          
    justify-content center
    align-items center

#over-lay .loading .block
    transition 0.6s all ease
    background-color color-quaternary
    height 1.4rem
    width 1.2rem
    margin 0.6rem
    border-radius 0.4rem

#over-lay .loading .block.pop
    transition 0.3s all ease-in-out
    background-color transparent 
    margin-bottom -1.6rem;


#modal-container .modal
    margin-top 8rem
    min-width 40rem
    min-height 6rem
    padding 1rem
    background-color color-initial
    border 1px solid color-tertiary
    border-radius 0.6rem
    box-shadow:3px 6px 10px -3px color-tertiary;
    -moz-box-shadow:3px 6px 10px -3px color-tertiary;
    -webkit-box-shadow:3px 6px 10px -3px color-tertiary;

.typcn
    line-height 1

.typcn.large:before
    font-size 3.6rem

.indicator 
    position absolute
    bottom -1px
    background color-success
    height 3px;
    width 100%;
    z-index 100