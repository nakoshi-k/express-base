
/*button extends*/
button,
.button
    transition 0.1s background-color ease, 0.1s border-color ease
    &:focus,
    &:hover
        border-color: color-primary-light
        background-color: color-primary-light
    .typcn
        margin-right 0.6rem
        &:before
            font-size 1.8rem
            margin 0
    &.small
        height 2.8rem
        line-height 2.8rem
        padding 0 1.0rem
    &.mini
        height 2.4rem
        font-size 0.6rem
        line-height 0
        padding .2rem .4rem
        .typcn
            &:before
                font-size 0.8rem
                margin 0.1rem

/* warning */
button,
.button
    &.warning
        border-color: color-warning
        background-color: color-warning
        &:focus,
        &:hover
            background-color: color-warning-light;
            border-color: color-warning-light;
        

        &[disabled]
            &:focus,
            &:hover 
                background-color: color-warning-light;
                border-color: color-warning-light;
            
        
        &.button-outline
            background-color: transparent
            color: color-warning;
            &:focus,
            &:hover
                border-color: color-warning-light;
                color: color-warning-light;
            
            &[disabled]
                &:focus,
                &:hover
                    color: color-warning;
                
            
        


