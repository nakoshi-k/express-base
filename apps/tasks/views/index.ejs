<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('../../views/tile/head') %>
  </head>
  <body>
 <%- include('../../views/tile/navigation') %>


 <div class="wrap">
    <div class="container">
      <div class="row">
          <div class="column column-25">
              <%- include('./sidebar') %>
          </div>
      
          <div class="column column-75">
           <main id="main">
            <% tasks.forEach(function (task) { %>
              <div>
                <div><h4><a href="/tasks/<%= task.id %>"><%= task.title %></a></h4></div>
                <a href="/tasks/<%= task.id %>/edit" class="button small"> Edit</a>
                <%- hlp.crud.delete( "delete" , 
                { path : "/tasks/#" , id : task.id , csrf : csrf , redirect : "/tasks" } , 
                {class : "button small"} ) %>
              </div>
            <% }); %>
            
  
            <%- hlp.pagination.render(page , {path: "/tasks/page/#"}); %>
           </main>
          </div>
      </div>
    </div>
</div>



 <%- include('../../views/tile/footer') %>
 <%- include('../../views/tile/scripts') %>
  </body>
</html>
