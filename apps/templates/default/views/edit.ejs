<!DOCTYPE html>
<html>
  <head>
    <title><%%= title %%></title>
    <%%- include('../../views/tile/head') %%>
  </head>
  <body>
<%%- include('../../views/tile/body-initial') %%>
<%%- include('../../views/tile/navigation') %%>

<div class="wrap">
  <div class="container">
    <div class="row">
      <div class="column column-25">
          <%%- include('./sidebar') %%>
      </div>
      <div class="column column-75">

        <%%- hlp.crud.delete( "delete" , { path : "/<%= names %>/#" , id : task.id , csrf : csrf , redirect : "/tasks" } ) %%>
        <%%- hlp.form.start( "<%= name %>" , <%= name %> , { "id" : "<%= action %>" ,"method" :"put" , "action" : "/tasks/:id" }); %%>

        <fieldset>
          <% fields.forEach(function (field) { %>
            <% if(field.name  === "updated_at" || field.name  === "created_at" ) {
              return;
            } %>
            <% if( /"type" : "hidden"/.test(field.attr) ) { %>
            <%%- hlp.form.<%- field.tag %>("<%= field.name %>" , <%- field.attr %>); %%>
            <% }else{%>
            <label for="title"><%= field.name %></label>
            <%%- hlp.form.<%- field.tag %>("<%= field.name %>" , <%- field.attr %>); %%>
            <% } %>  
          <% }); %>
        </fieldset>

        <%%- hlp.form.submit( "submit" , { "class" : "xhr-post" , "data-target" : "#<%= action %>" } ); %%>
        <%%- hlp.form.end(); %%>
      </div>
    </div>
  </div>

</div>
<%%- include('../../views/tile/footer') %%>
<%%- include('../../views/tile/scripts') %%>
<%%- include('../../views/tile/body-final') %%>
  </body>
</html>

