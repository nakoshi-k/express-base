{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution" : "node",
        "allowSyntheticDefaultImports": true,	
        "lib" : ["dom", "es2017",  "es5"],
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir" : "dist",
        "watch" : false,
        "allowJs" : true,
        "pretty" : true
    },
    "include": [
        "./**/*.ts",
        "./**/*.vue"
    ],
    "exclude": [
        "./node_modules",
        "./ignore",
        "./apps/public/scripts/"
 
    ]
}