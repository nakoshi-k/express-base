<script>
    function <%= delFunc %>{
        if(!confirm(' Would you like to delete #<%= id %>?')){
            return false;
        }
        fetch( '<%= endPoint %>' , {
            credentials: 'same-origin' ,
            method: 'DELETE',
            headers: {
            'X-Requested-With': 'XMLHttpRequest' ,
            'X-XSRF-Token': '<%= token %>'
            }
        })
        .then((response) => {
            if(response.status === 204){ location.href = '<%= redirect %>'; return true; };
            alert('failed delete #<%= id %> !');
        });
        return false;

    }
</script>