{
  "name": "p3",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "browsersync": "browser-sync start --proxy localhost:4000 --files=\"dis/apps/public/**/*.*\" ",
    "start": "nodemon ./dist/bin/www.js",
    "build:view": "cpx \"{apps,base,models,config,public}/**/*.{ejs,js,json,tag,ico,gif,jpg,jpeg}\" dist",
    "build:stylus": "stylus apps/public/stylesheets/style.styl -o dist/apps/public/stylesheets/style.css --include-css",
    "build:scripts": "browserify apps/public/scripts/components.ts -p [tsify --target ES6] -o dist/apps/public/scripts/components.js -v",
    "build:tsc" : "tsc",
    "watch:stylus": "chokidar \"apps/public/stylesheets/**/*.styl\" --command \"npm run build:stylus\"",
    "watch:scripts": "watchify apps/public/scripts/components.ts -p [tsify --target ES6] -o dist/apps/public/scripts/components.js -v",
    "prebuild": "mkdir -p dist/apps/public/scripts dist/apps/public/stylesheets",
    "build": "npm-run-all build:tsc build:view build:stylus build:scripts",
    "watch": "npm-run-all -p \"build:tsc -- -w\" \"build:view -- -w -u\" watch:stylus watch:scripts",
    "dev": "npm-run-all -p watch start browsersync"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "chai-http": "^3.0.0",
    "connect-redis": "^3.3.0",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "deep-assign": "^2.0.0",
    "ejs": "~2.4.1",
    "express": "^4.13.4",
    "express-session": "^1.15.3",
    "flatpickr": "^3.0.7",
    "method-override": "^2.3.9",
    "milligram-stylus": "^1.3.0",
    "morgan": "^1.7.0",
    "mysql": "^2.14.1",
    "mysql2": "^1.4.2",
    "node-uuid": "^1.4.8",
    "reflect-metadata": "^0.1.10",
    "remodal": "^1.1.1",
    "riot": "^3.7.0",
    "sequelize": "^3.30.4",
    "sequelize-cli": "^2.8.0",
    "serve-favicon": "^2.3.2",
    "typescript": "^2.5.2",
    "umbrellajs": "^2.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.43",
    "@types/node": "^7.0.43",
    "@types/sequelize": "^4.0.73",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.14",
    "chai": "^4.1.2",
    "debug": "^2.2.0",
    "ejs": "^2.4.2",
    "mocha": "^3.5.3",
    "morgan": "^1.8.2",
    "tsify": "^3.0.3",
    "typescript": "^2.5.2"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "confirmDatePlugin": "./node_modules/flatpickr/dist/plugins/confirmDate/confirmDate.js",
    "flatpickr": "./node_modules/flatpickr/dist/flatpickr.min.js"
  },
  "browserify-shim": {
    "umbrella": "u"
  }
}
