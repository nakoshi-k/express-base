<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('../../common/views/head-base') %>
  </head>
  <body>
 <%- include('../../common/views/global-nav') %>


 <div class="wrap">
    <div class="container">
      <div class="row">
          <div class="column column-25">
              <%- include('./sidebar') %>
          </div>
      
          <div class="column column-75">
           <main id="main">
            <% tasks.forEach(function (task) { %>
              <div>
                <div><h4><a href="/tasks/<%= task.id %>"><%= task.title %></a></h4></div>
                <a href="/tasks/<%= task.id %>/edit" class="button"> Edit</a>
                <%- hlp.crud.delete( "delete" , { path : "/tasks/#" , id : task.id , csrf : csrf , redirect : "/tasks" } ) %>
              </div>
            <% }); %>

            
  
            <%- hlp.pagination.render(page , {path: "/tasks/page/#"}); %>
           </main>
          </div>
      </div>
    </div>
</div>





 <%- include('../../common/views/scripts') %>
  </body>
</html>
