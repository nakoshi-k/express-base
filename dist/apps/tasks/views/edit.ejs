<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('../../views/tile/head') %>
  </head>
  <body>
<%- include('../../views/tile/body-initial') %>
<%- include('../../views/tile/navigation') %>

<div class="wrap">
  <div class="container">
    <div class="row">
      <div class="column column-25">
          <%- include('./sidebar') %>
          edit
      </div>
      <div class="column column-75">

        <%- hlp.crud.delete( "delete" , { path : "/tasks/#" , id : task.id , csrf : csrf , redirect : "/tasks" } ) %>
        <%- hlp.form.start( "task" , task , { "id" : "edit" ,"method" :"put" , "action" : "/tasks/:id" }); %>

        <fieldset>
          
            
            
            <%- hlp.form.input("id" , { "type" : "hidden" }); %>
              
          
            
            
            <label for="title">title</label>
            <%- hlp.form.input("title" , { "type" : "text" }); %>
              
          
            
            
            <label for="title">priod</label>
            <%- hlp.form.input("priod" , { "class" : "calendar","type" : "text" }); %>
              
          
            
            
        </fieldset>

        <%- hlp.form.submit( "submit" , { "class" : "xhr-post" , "data-target" : "#edit" } ); %>
        <%- hlp.form.end(); %>
      </div>
    </div>
  </div>

</div>
<%- include('../../views/tile/footer') %>
<%- include('../../views/tile/scripts') %>
<%- include('../../views/tile/body-final') %>
  </body>
</html>

